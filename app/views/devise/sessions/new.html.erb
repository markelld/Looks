<div class="flex-grow"> 
  <section class="bg-gradient-to-b from-gray-100 to-white"> 
    <div class="max-w-6xl mx-auto px-4 sm:px-6">
      <div class="pt-8 pb-12 md:pt-20 md:pb-20">  

      <div class="max-w-3xl mx-auto text-center pb-12 md:pb-12">
       <h1 class=""> Welcome Back </h1>
      </div>  
  <div class="max-w-sm mx-auto"> 
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %> 
    <div class="flex flex-wrap -mx-3 mb-4">
      <div class="w-full px-3">
        <%= f.label :email, class:"block text-gray-800 font-medium mb-1" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-input w-full text-gray-800" %>
      </div>
    </div>
    <div class="flex flex-wrap -mx-3 mb-2"> 
      <div class="w-full px-3"> 
        <%= f.label :password, class:"block text-gray-800 font-medium mb-1" %><br />
        <%= f.password_field :password, autocomplete: "current-password", class:"form-input w-full text-gray-800" %>
      </div>
    </div>

    <% if devise_mapping.rememberable? %>  
    <div class="flex flex_wrap -mx-3 mb-2"> 
      <div class="w-full px-3">  
        <div class="flex items-center"></div>
        <%= f.check_box :remember_me, class:"form-checkbox"%>
        <%= f.label :remember_me, class:"text-gray-600 ml-2" %>
        </div>
    </div>
    <% end %>
    <div class="flex flex-wrap -mx-3 mt-6">
      <div class="w-full px-3 pb-4">
        <%= f.submit "Log in", class:"btn text-white bg-blue-600 hover:bg-blue-700 w-full px-4 py-2 mt-2 rounded-md" %>
      </div>
    </div> 
  <% end %> 
      <div class="flex justify-evenly">
        <%= render "devise/shared/links" %>
      </div>
    </div>
      </div>
    </div>
  </section>
</div> 
  



